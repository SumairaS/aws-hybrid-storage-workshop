{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "Hybrid Workshop - Cutover 1 - Windows Server No.2 (eu-central-1) v1.00",
  "Metadata": {
    "License" : {
        "Description" : "'Copyright 2017 Amazon.com, Inc. and its affiliates. All Rights Reserved.
        Licensed under the Amazon Software License (the \"License\"). You may not use this file
        except in compliance with the License. A copy of the License is located at

        http://aws.amazon.com/asl/

        or in the \"license\" file accompanying this file. This file is distributed on an \"AS IS\"
        BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied. See the
        License for the specific language governing permissions and limitations under the License.'"
    },
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
         "Label": { "default" : "Windows Cutover Instance 1" },
         "Parameters": [ "existingVPC", "existingSubnet" , "type"]
        },
        {
          "Label": { "default" : "Secondary EBS Volume from EBS snapshot" },
          "Parameters": [ "snapshot"]
         },
        {
          "Label": { "default": "Security" },
          "Parameters": [ "key", "allowed1" ]
        }
      ],
      "ParameterLabels": {
        "allowed1": { "default": "Allow RDP access from:" },
        "existingSubnet": { "default": "Subnet:" },
        "existingVPC": { "default": "VPC:" },
        "key": { "default": "Access Key Pair:" },
        "type": { "default": "Instance Type:" }
      }
    }
  },
  "Parameters": {
    "existingSubnet":{
     "Type":"AWS::EC2::Subnet::Id"
    },
    "existingVPC":{
       "Type":"AWS::EC2::VPC::Id"
    },
    "type": {
      "AllowedValues": [ "t2.medium" ],
      "Default": "t2.medium",
      "Type": "String"
    },
    "key": {
        "Description": "EC2 key pair for RDP Access",
        "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "allowed1":{
       "Description":"(CIDR)",
       "Type":"String",
       "Default":"0.0.0.0/0",
       "ConstraintDescription":"Valid CIDR Block"
    },
    "snapshot" : {
      "Description" : "Snapshot generated from GW volume in previous step",
      "Type" : "String",
      "Default" : "snap-xxxxxxxxxxxxxxxxx",
      "ConstraintDescription":"Valid snapshot ID within region"
    }
  },
  "Resources" : {
    "win2SecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Hybrid Workshop - Windows Server 2 RDP Access",
        "VpcId":{ "Ref":"existingVPC" },
        "SecurityGroupIngress" : [
          { "IpProtocol" : "tcp", "FromPort" : "3389", "ToPort" : "3389", "CidrIp" : { "Ref" : "allowed1"} }
         ]
      }
    },
    "win1Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId" : "ami-29fd4b46",
        "InstanceType": { "Ref" : "type" },
        "Tags": [ { "Key": "Name", "Value": { "Fn::Join": [ "", [ "Hybrid Workshop - Cutover 1 - Windows Server 2 (", { "Ref": "AWS::StackName" }, ")" ] ] } } ],
        "InstanceInitiatedShutdownBehavior": "terminate",
        "KeyName": { "Ref" : "key"},
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30",
              "DeleteOnTermination" : "true",
              "VolumeType" : "gp2"
            }
          }
        ],
        "NetworkInterfaces": [
          {
              "AssociatePublicIpAddress": "true",
              "DeviceIndex": "0",
              "GroupSet": [ { "Ref": "win2SecurityGroup" } ],
              "SubnetId":{ "Ref":"existingSubnet" }
          }
        ],
      }
    },
    "windowsDisk2Attach" : {
      "Type":"AWS::EC2::VolumeAttachment",
      "Properties" : { "Device" :  "/dev/xvdb", "InstanceId" : { "Ref" : "win1Instance" }, "VolumeId" : { "Ref" : "windowsDisk2" } }
    },
    "windowsDisk2" : {
      "Type":"AWS::EC2::Volume",
      "Properties" : {
        "AvailabilityZone" : { "Fn::GetAtt" : [ "win1Instance", "AvailabilityZone" ] },
        "Size" : "1",
        "VolumeType" : "gp2",
        "SnapshotId" : { "Ref" : "snapshot" },
        "Tags": [ { "Key": "Name", "Value": { "Fn::Join": [ "", [ "Hybrid Workshop - Cutover 1 - Windows Server 2 Disk 2 (", { "Ref": "AWS::StackName" }, ")" ] ] } } ]
      }
    }
  },
  "Outputs" : { }
}
