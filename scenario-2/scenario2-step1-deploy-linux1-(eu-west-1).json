{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "Hybrid Workshop - Deploy Linux Server 1 (eu-west-1) v1.00",
  "Metadata": {
    "License" : {
        "Description" : "'Copyright 2017 Amazon.com, Inc. and its affiliates. All Rights Reserved.
        Licensed under the Amazon Software License (the \"License\"). You may not use this file
        except in compliance with the License. A copy of the License is located at

        http://aws.amazon.com/asl/

        or in the \"license\" file accompanying this file. This file is distributed on an \"AS IS\"
        BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied. See the
        License for the specific language governing permissions and limitations under the License.'"
    },
    "AWS::CloudFormation::Interface": {
     "ParameterGroups": [
       {
         "Label": { "default" : "Linux Instance Configuration" },
         "Parameters": [ "existingVPC", "existingSubnet" , "type"]
        },
        {
          "Label": { "default": "Security" },
          "Parameters": [ "key", "allowed1" ]
        }
      ],
     "ParameterLabels": {
      "allowed1": { "default": "Allow SSH access from:" },
      "existingSubnet": { "default": "Subnet:" },
      "existingVPC": { "default": "VPC:" },
      "key": { "default": "Access Key Pair:" },
      "type": { "default": "Instance Type:" }
     }
    }
  },
  "Parameters": {
    "existingSubnet":{
     "Type":"AWS::EC2::Subnet::Id"
    },
    "existingVPC":{
       "Type":"AWS::EC2::VPC::Id"
    },
    "type": {
      "AllowedValues": [ "t2.micro" ],
      "Default": "t2.micro",
      "Type": "String"
    },
    "key": {
        "Description": "EC2 key pair for RDP Access",
        "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "allowed1":{
       "Description":"(CIDR)",
       "Type":"String",
       "Default":"0.0.0.0/0",
       "ConstraintDescription":"Valid CIDR Block"
    }
  },
  "Resources" : {
    "linux1SecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Hybrid Workshop - Windows Server 1 SSH Access",
        "VpcId":{ "Ref":"existingVPC" },
        "SecurityGroupIngress" : [
          { "IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : { "Ref" : "allowed1"} }
         ]
      }
    },
    "linux1Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId" : "ami-acd005d5",
        "InstanceType": { "Ref" : "type" },
        "IamInstanceProfile": { "Ref": "linux1InstanceProfile" },
        "Tags": [ { "Key": "Name", "Value": { "Fn::Join": [ "", [ "Hybrid Workshop - Deploy - Linux Server 1 (", { "Ref": "AWS::StackName" }, ")" ] ] } } ],
        "KeyName": { "Ref" : "key"},
        "InstanceInitiatedShutdownBehavior": "terminate",
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/xvda",
            "Ebs": {
              "VolumeSize": "8",
              "DeleteOnTermination" : "true",
              "VolumeType" : "gp2"
            }
          }
        ],
        "NetworkInterfaces": [
          {
              "AssociatePublicIpAddress": "true",
              "DeviceIndex": "0",
              "GroupSet": [ { "Ref": "linux1SecurityGroup" } ],
              "SubnetId":{ "Ref":"existingSubnet" }
          }
        ],
        "UserData": {
            "Fn::Base64": {
              "Fn::Join": [
                "",
                [
                  "#!/bin/bash\n",
                  "mkdir /media/data\n",
                  "for i in {00001..00200}; do\n",
                  " aws s3 cp s3://aft-vbi-pds/bin-images/${i}.jpg /media/data/ >> /tmp/sync\n",
                  "done\n,"
                ]
              ]
            }
          }
      }
    },
    "linux1InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [ { "Ref": "linux1IamRole" } ] },
    },
    "linux1IamRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [ {
            "Action": [ "sts:AssumeRole" ],
            "Effect": "Allow",
            "Principal": { "Service": [ "ec2.amazonaws.com" ] }
          }
          ],
          "Version": "2012-10-17"
        }
      }
    },
    "linux1RolePolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": ["s3:ListBucket"],
              "Resource": ["arn:aws:s3:::aft-vbi-pds"]
            },
            {
              "Effect": "Allow",
              "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject"
              ],
              "Resource": ["arn:aws:s3:::aft-vbi-pds/*"]
            }
          ],
          "Version": "2012-10-17"
        },
        "PolicyName": "policy",
        "Roles": [ { "Ref": "linux1IamRole" } ]
      }
    }
  },
  "Outputs" : { }
}
